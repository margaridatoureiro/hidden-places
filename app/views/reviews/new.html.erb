<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 p-4" >
      <%= simple_form_for [@place, @review] do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :rating, collection: 0..5 %>
        <div class="d-flex justify-content-between">
          <%= f.submit 'Share your review', class: "btn btn-success" %>
          <%= link_to "Go back", :back, class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

